{
  "name": "MyDistro Build Container",
  "build": { "dockerfile": "Dockerfile" },
  "context": "..",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/mydistro,type=bind,consistency=cached"
  ],
  "remoteUser": "vscode",
  "extensions": [
    "ms-vscode-remote.remote-containers",
    "timonwong.shellcheck",
    "eamodio.gitlens"
  ],
  "postCreateCommand": "sudo chown -R vscode: /workspaces/mydistro || true",
  "runArgs": [
    "--cap-add=SYS_ADMIN",
    "--device=/dev/fuse"
  ],
  "containerEnv": {
    "DEBIAN_FRONTEND": "noninteractive"
  }
}